<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProfileCommentRow"
            android:layout_width="@dimen/profile_imageview_width"
            android:layout_height="@dimen/profile_imageview_height"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewNickNameBottomCommentRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/comment_nickname_margin_top"
            android:text="닉네임"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewContentBottomCommentRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="내용" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDateBottomCommentRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="날짜"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/imageViewLikeCommentRow"
                android:layout_width="@dimen/icon_thumb_up_width"
                android:layout_height="@dimen/icon_thumb_up_width"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_thumb_up_24px" />

            <TextView
                android:id="@+id/textViewLikeCommentRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/board_text_like_margin_start"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="#FF0000"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/imageViewChatRowComment"
                android:layout_width="@dimen/icon_comment_width"
                android:layout_height="@dimen/icon_comment_width"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_chat_bubble_24px" />

            <ImageView
                android:id="@+id/imageViewDeleteRowComment"
                android:layout_width="@dimen/icon_comment_width"
                android:layout_height="@dimen/icon_comment_height"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:foregroundGravity="right"
                app:srcCompat="@drawable/ic_delete_24px" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>